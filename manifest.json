{
  "name": "Markdown Link",
  "version": "0.2.1",
  "description": "Copy Markdown link for current tab.",
  "icons": {
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab", "clipboardWrite"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  "browser_action": {
    "default_title": "Get Markdown URL"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+F"
      }
    }
  },
  "manifest_version": 2
}
