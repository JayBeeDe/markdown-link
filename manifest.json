{
  "name": "Markdown Link",
  "version": "0.3.0",
  "description": "Copy Markdown link for current tab.",
  "icons": {
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js",
      "common.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "browser_action": {
    "default_title": "Get Markdown URL"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+F"
      }
    }
  },
  "manifest_version": 2
}